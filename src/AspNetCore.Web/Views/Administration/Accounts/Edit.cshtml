@model AccountEditView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForHeader("Account")</h5>
            <div class="widget-header-buttons">
                <authorize action="@nameof(Accounts.Details)">
                    <a asp-action="@nameof(Accounts.Details)" asp-route-id="@Model.Id" class="btn">
                        <span class="fa fa-info"></span>
                        <span class="text">@Resource.ForAction(nameof(Accounts.Details))</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <div class="form-group row">
                    <div class="control-label col-md-4 col-xl-2">
                        <label asp-for="Username"></label>
                    </div>
                    <div class="control-content col-md-8 col-xl-4">
                        <input asp-for="Username" readonly />
                    </div>
                    <div class="control-validation offset-md-4 col-md-8 offset-xl-0 col-xl-6">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-md-4 col-xl-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="control-content col-md-8 col-xl-4">
                        <input asp-for="Email" class="text-lowercase" inputmode="email" readonly />
                    </div>
                    <div class="control-validation offset-md-4 col-md-8 offset-xl-0 col-xl-6">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-label col-md-4 col-xl-2">
                        <label asp-for="IsLocked"></label>
                    </div>
                    <div class="control-content col-md-8 col-xl-4">
                        <input asp-for="IsLocked" />
                    </div>
                    <div class="control-validation offset-md-4 col-md-8 offset-xl-0 col-xl-6">
                        <span asp-validation-for="IsLocked"></span>
                    </div>
                </div>
                <div class="form-group row">
                </div>
                <div class="form-group row">
                    <div class="control-label col-md-4 col-xl-2">
                        <label asp-for="RoleId"></label>
                    </div>
                    <div class="control-content col-md-8 col-xl-4">
                        <div mvc-lookup-for="RoleId" handler="@nameof(Lookup.Role)"></div>
                    </div>
                    <div class="control-validation offset-md-4 col-md-8 offset-xl-0 col-xl-6">
                        <span asp-validation-for="RoleId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="control-actions col-xl-6">
                        <button class="btn btn-primary">@Resource.ForAction("Submit")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
