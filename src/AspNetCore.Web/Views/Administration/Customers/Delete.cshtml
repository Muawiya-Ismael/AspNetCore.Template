@model CustomerView

<div class="col">
    <div class="widget-box readonly">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForHeader("Customer")</h5>
            <div class="widget-header-buttons">
                <authorize action="@nameof(Customers.Details)">
                    <a asp-action="@nameof(Customers.Details)" asp-route-id="@Model.Id" class="btn">
                        <span class="fa fa-info"></span>
                        <span class="text">@Resource.ForAction(nameof(Customers.Details))</span>
                    </a>
                </authorize>
                <authorize action="@nameof(Customers.Edit)">
                    <a asp-action="@nameof(Customers.Edit)" asp-route-id="@Model.Id" class="btn">
                        <span class="fa fa-pencil-alt"></span>
                        <span class="text">@Resource.ForAction(nameof(Customers.Edit))</span>
                    </a>
                </authorize>
            </div>
        </div>
        <div class="widget-content">
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Username"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Username" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="FirstName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="LastName"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="LastName" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Email"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Email" class="text-lowercase" inputmode="email" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Phone"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Phone" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Address"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Address" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="DateOfBirth"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="DateOfBirth" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Gender"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Gender" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="Country"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="Country" />
                </div>
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="IsLocked"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="IsLocked" />
                </div>
            </div>
            <div class="form-group row">
            </div>
            <div class="form-group row">
                <div class="control-label col-md-4 col-xl-2">
                    <label asp-for="RoleTitle"></label>
                </div>
                <div class="control-content col-md-8 col-xl-4">
                    <input asp-for="RoleTitle" />
                </div>
            </div>
            <form asp-antiforgery="true">
                <div class="form-group row">
                    <div class="control-actions col-xl-6">
                        <button class="btn btn-primary">@Resource.ForAction("Submit")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
